// .vscode/settings.json
{
  // ========================================================================
  // 1. FUNDAMENTOS SÓLIDOS: Apariencia y Comportamiento General
  // ========================================================================
  "workbench.colorTheme": "Default Dark Modern",
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "workbench.editor.empty.hint": "hidden",
  "files.eol": "\n",
  "security.workspace.trust.untrustedFiles": "open",
  "redhat.telemetry.enabled": false,
  "editor.minimap.enabled": true,
  "editor.renderWhitespace": "boundary",
  "editor.cursorBlinking": "smooth",
  "window.zoomLevel": 0,
  "files.autoSave": "afterDelay",

  // ========================================================================
  // 2. CALIDAD DE ÉLITE: Automatización y Refuerzo de Directivas
  // ========================================================================
  "editor.defaultFormatter": "esbenp.prettier-vscode", // <-- SSoT GLOBAL PARA PRETTIER
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  // ========================================================================
  // 3. FOCO Y CLARIDAD VISUAL: Preferencias de Diseñador
  // ========================================================================
  "editor.fontFamily": "'Cascadia Code', 'Fira Code', Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "workbench.tree.indent": 12,
  "breadcrumbs.enabled": true,
  "editor.guides.bracketPairs": "active",

  // ========================================================================
  // 4. INTELIGENCIA DE LENGUAJE: TypeScript, Tailwind y Ecosistema
  // ========================================================================
  "typescript.tsserver.experimental.enableProjectDiagnostics": true,
  "typescript.tsdk": "node_modules/typescript/lib",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "files.associations": { "*.css": "tailwindcss" },
  "css.lint.unknownAtRules": "ignore",
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
  ],
  "editor.inlineSuggest.enabled": true,
  "tailwindCSS.emmetCompletions": true,
  "eslint.useFlatConfig": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.workingDirectories": [{ "pattern": "./" }],

  // --- [INICIO DE REFACTORIZACIÓN DE ÉLITE] ---
  // Se eliminan las anulaciones redundantes. Solo se definen configuraciones
  // específicas por lenguaje que DIFIEREN del comportamiento global.
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.defaultFormatter": "esbenp.prettier-vscode" // Tu adición, ahora integrada.
  },
  "[xml]": {
    "editor.defaultFormatter": "fabianlauer.vs-code-xml-format"
  },
  "[css]": {
    "editor.quickSuggestions": { "strings": "on" }
  },
  // --- [FIN DE REFACTORIZACIÓN DE ÉLITE] ---

  // ========================================================================
  // 5. CONOCIMIENTO DEL PROYECTO: Diccionario y Herramientas
  // ========================================================================
  "cSpell.words": [
    "convertikit",
    "metashark",
    "podesta",
    "supabase",
    "tailwindcss",
    "clsx",
    "lucide",
    "radix",
    "zod",
    "zustand",
    "pino",
    "vitest",
    "playwright",
    "msw",
    "framer",
    "headlessui",
    "cmdk",
    "nextjs",
    "sonner",
    "tanstack",
    "I18N",
    "TSDoc",
    "shadcn",
    "webvork"
  ],
  "todo-tree.tree.showScanModeButton": false,

  // ========================================================================
  // 6. FLUJO DE TRABAJO: Terminal y Git
  // ========================================================================
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,

  // ========================================================================
  // 7. RENDIMIENTO Y POTENCIA: Exclusiones y Aumento de Memoria
  // ========================================================================
  "search.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/dist": true,
    "**/out": true,
    "**/coverage": true,
    "pnpm-lock.yaml": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.next/**": true,
    "**/dist/**": true,
    "**/out/**": true
  },
  "typescript.tsserver.maxTsServerMemory": 4096
}
