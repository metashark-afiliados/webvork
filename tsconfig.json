// tsconfig.json
{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts", // <-- CORRECCIÓN: Incluir todos los archivos .ts
    "**/*.tsx", // <-- CORRECCIÓN: Incluir todos los archivos .tsx
    "**/*.json", // <-- CORRECCIÓN: Incluir archivos .json para consistencia
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "out", ".next"] // <-- Simplificado
}
// tsconfig.json
